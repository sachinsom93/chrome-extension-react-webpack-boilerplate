{
	"manifest_version": 3,
	"version": "1.0.0",
	"name": "Visa Extension",
	"description": "Chrome extension for continously monitor visa website status.",
	"action": {
		"default_popup": "index.html",
		"default_title": "Open the popup"
	},
	"icons": {
		"16": "logo192.png",
		"48": "logo192.png",
		"128": "logo192.png"
	},
	"permissions": ["activeTab", "contextMenus"],
	"content_scripts": [
		{
			"matches": ["https://*/*", "http://*/*"],
			"js": ["./static/js/content.js"],
			"all_frames": false,
			"run_at": "document_end"
		}
	],
	"background": {
		"service_worker": "./static/js/background.js"
	}
}
